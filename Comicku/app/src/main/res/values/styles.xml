<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/colorMain</item>
    </style>


    <style name="AppTheme.ScrollEdge">
        <item name="android:colorEdgeEffect">@color/colorMainLight</item>
    </style>

    <!--    TEXT APPEARANCE    -->
    <style name="Comicku.TextAppearance.Title1" parent="">
        <item name="android:fontFamily">@font/rooneymedium</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Comicku.TextAppearance.Title2" parent="">
        <item name="android:fontFamily">@font/rooneymedium</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Comicku.TextAppearance.Title3" parent="">
        <item name="android:fontFamily">@font/rooneymedium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Comicku.TextAppearance.Title4" parent="">
        <item name="android:fontFamily">@font/rooneymedium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Comicku.TextAppearance.Body1" parent="">
        <item name="android:fontFamily">@font/rooneyregular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Comicku.TextAppearance.Body2" parent="">
        <item name="android:fontFamily">@font/rooneyregular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Comicku.TextAppearance.Body3" parent="">
        <item name="android:fontFamily">@font/rooneyregular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--  SHAPE ROUND  -->
    <style name="Comicku.ShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="Comicku.ShapeAppearance2" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

</resources>