<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/colorMainLightAlpha80"
    app:cardCornerRadius="30dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/colorBlueKomikuYoung"
    app:strokeWidth="1dp"
android:layout_marginBottom="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <FrameLayout
            android:id="@+id/_mangaItem_frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/grey">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/mangaItem_imageView"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@color/grey"
                />

            <TextView
                android:id="@+id/mangaItem_tvType"
                android:layout_width="30dp"
                android:layout_height="10dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_round_green"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:shadowColor="@color/white"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="20"
                android:textAppearance="@style/Comicku.TextAppearance.Body3"
                android:textColor="@android:color/white"
                tools:text=""
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/_mangaItem_frameLayout"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mangaItem_tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/Comicku.TextAppearance.Title4"
                android:textColor="@color/white"
                tools:text=""
                android:background="@color/grey"
                android:shadowRadius="8"
                android:shadowDy="0.0"
                android:shadowDx="0.0"
                android:shadowColor="@color/white"/>

            <TextView
                android:id="@+id/mangaItem_tvChapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/Comicku.TextAppearance.Body1"
                android:textColor="@color/colorBlueKomikuYoung"
                tools:text=""
                android:background="@color/colorBlueKomikuYoung"/>

            <TextView
                android:id="@+id/mangaItem_tvUpdateOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/Comicku.TextAppearance.Body1"
                android:textColor="@color/colorBlueKomikuYoung"
                tools:text=""
                android:background="@color/colorBlueKomikuYoung"/>

            <TextView
                android:id="@+id/mangaItem_Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/Comicku.TextAppearance.Body1"
                android:textColor="@color/colorBlueKomikuYoung"
                tools:text=""
                android:background="@color/colorBlueKomikuYoung"/>
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>