<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/colorMain"
    app:cardCornerRadius="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/simpleMangaItem_imageView"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                tools:src="@drawable/example" >

            </com.google.android.material.imageview.ShapeableImageView>

            <TextView
                android:id="@+id/simpleMangaItem_tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/Comicku.TextAppearance.Body2"
                android:textColor="@color/white"
                tools:text="Valhalla for brave viking"
                android:fontFamily="@font/rooney"
                android:textStyle="bold"
                android:shadowRadius="20"
                android:shadowDy="0.0"
                android:shadowDx="0.0"
                android:shadowColor="@color/black"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>

        </FrameLayout>



    </LinearLayout>
</com.google.android.material.card.MaterialCardView>